{
  "name": "nodejs-expressjs-mongodb-backend",
  "version": "1.0.0",
  "description": "Backend API",
  "license": "ISC",
  "author": "Arjav Lad",
  "type": "commonjs",
  "main": "index.js",
  "dist": {
    "types": "dist/index.d.ts",
    "main": "dist/index.js"
  },
  "readme": "README.md",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "check": "npm run type-check && npm run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config=jest.integration.config.js",
    "prod": "npm run build && NODE_ENV=production pm2 start ecosystem.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "stripe:webhook": "stripe listen --forward-to localhost:3000/webhooks/stripe",
    "prepare": "husky",
    "init:module": "sh ./scripts/initModule.sh"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.777.0",
    "@aws-sdk/s3-request-presigner": "^3.777.0",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "firebase-admin": "^13.2.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "moment": "^2.30.1",
    "mongoose": "^8.13.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "sharp": "^0.33.5",
    "stripe": "^17.7.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.16",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.14",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "pm2": "^5.4.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  },
  "packageManager": "npm@11.2.0"
}
